<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>EpiMarket</display-name>
 <context-param>
    <param-name>rootdir</param-name>
    <param-value>/epimarket</param-value>
  </context-param>

	<servlet>
		<servlet-name>backoffice</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>com.epimarket.backoffice.VaadinTest</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>backoffice</servlet-name>
		<url-pattern>/backoffice/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>app</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>app</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>
	<!--  Lang Fr_fr -->
	<context-param>
    <param-name>webtitle</param-name>
    
   
    <param-value>Epimarket website</param-value>
  </context-param>
  
  

  
  
  


</web-app>
